<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="106dp"
        android:layout_height="44dp"
        android:paddingTop="10dp"
        android:text="Kat. Nr.:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:text="Neuer Schüler"
        android:textColor="#0661F3"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="106dp"
        android:layout_height="44dp"
        android:paddingTop="10dp"
        android:text="Vorname:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="106dp"
        android:layout_height="44dp"
        android:paddingTop="10dp"
        android:text="Nachname:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="106dp"
        android:layout_height="44dp"
        android:paddingTop="10dp"
        android:text="Kosten:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="106dp"
        android:layout_height="71dp"
        android:paddingTop="10dp"
        android:text="Zusätzliche Daten:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="291dp" />

    <EditText
        android:id="@+id/studentFirstName_plainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="132dp" />

    <EditText
        android:id="@+id/studentSurname_plainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="186dp" />

    <EditText
        android:id="@+id/studentCost_plainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="238dp" />

    <EditText
        android:id="@+id/studentData_plainText"
        android:layout_width="212dp"
        android:layout_height="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="291dp" />

    <EditText
        android:id="@+id/studentNumber_numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>